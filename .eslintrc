{
  "root": true,
  "extends": "airbnb",
  "plugins": ["jest"],
  "env": {
    "jest/globals": true
  },
  "rules": {
    "no-bitwise": "off",
    "no-lonely-if": "off",
    "class-methods-use-this": "off",
    "arrow-body-style": "off",
    "no-loop-func": "off",
    "no-plusplus": "off",
    "arrow-parens": "off",
    "operator-linebreak": ["error", "after"],
    "import/prefer-default-export": "off",
    "no-restricted-globals": ["error", "event"]
  }
}
